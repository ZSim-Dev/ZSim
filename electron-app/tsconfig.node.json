{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["electron-vite/node", "vite/client"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "eslint.config.*",
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*"
  ]
}
